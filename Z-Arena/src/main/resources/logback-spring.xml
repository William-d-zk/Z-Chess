<configuration>
    <!-- https://github.com/spring-projects/spring-boot/blob/v1.4.2.RELEASE/spring-boot/src/main/resources/org/springframework/boot/logging/logback/defaults.xml -->
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>
    <property name="APP_NAME" value="Z-Chess"/>
    <property name="LOG_PATH" value="${user.home}/${APP_NAME}/logs"/>
    <property name="Z_CHESS_LOG_FILE" value="${LOG_PATH}/z-chess.log"/>
    <appender name="Z-CHESS"
              class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${Z_CHESS_LOG_FILE}</file>
        <encoder>
            <pattern>${FILE_LOG_PATTERN}</pattern>
            <charset>utf8</charset>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${Z_CHESS_LOG_FILE}.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxHistory>7</maxHistory>
            <maxFileSize>50MB</maxFileSize>
            <totalSizeCap>2GB</totalSizeCap>
        </rollingPolicy>
    </appender>
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${CONSOLE_LOG_PATTERN}</pattern>
            <charset>utf8</charset>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>

    <logger name="base.king" level="INFO">
        <appender-ref ref="Z-CHESS"/>
    </logger>
    <logger name="io.queen" level="INFO">
        <appender-ref ref="Z-CHESS"/>
    </logger>
    <logger name="io.queen.dispatcher" level="DEBUG">
        <appender-ref ref="Z-CHESS"/>
    </logger>
    <logger name="io.queen.processor" level="DEBUG">
        <appender-ref ref="Z-CHESS"/>
    </logger>
    <logger name="protocol.bishop" level="DEBUG">
        <appender-ref ref="Z-CHESS"/>
    </logger>
    <logger name="cluster.knight" level="DEBUG">
        <appender-ref ref="Z-CHESS"/>
    </logger>
    <logger name="storage.rook" level="DEBUG">
        <appender-ref ref="Z-CHESS"/>
    </logger>
    <logger name="endpoint.pawn" level="DEBUG">
        <appender-ref ref="Z-CHESS"/>
    </logger>
    <logger name="biz.player" level="DEBUG">
        <appender-ref ref="Z-CHESS"/>
    </logger>
    <logger name="security.referee" level="DEBUG">
        <appender-ref ref="Z-CHESS"/>
    </logger>
    <logger name="gateway.arena" level="DEBUG">
        <appender-ref ref="Z-CHESS"/>
    </logger>
</configuration>